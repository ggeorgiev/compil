path-constant TOP : .. ;
path-constant ROOT : $(TOP)/.. ;

boost-defines ;
gtest-defines ;

project library
  : requirements
    <include>$(TOP)
  ;

lib cpp-boost-library
  :
    c++/boost/exception.cpp
    c++/boost/namespace.cpp

    $(TOP)/language//cpp-language
    $(TOP)/language//compil-language
  :
    <implicit-dependency>$(TOP)/language//cpp-language
    <implicit-dependency>$(TOP)/language//compil-language
  :
  :
    <include>$(TOP)
  ;
  
lib cpp-compil-library
  :
    c++/compil/builder.cpp
    c++/compil/namespace.cpp
    c++/compil/specimen.cpp
    
    $(TOP)/language//cpp-language
    $(TOP)/language//compil-language
  :
    <implicit-dependency>$(TOP)/language//cpp-language
    <implicit-dependency>$(TOP)/language//compil-language
  :
  :
    <include>$(TOP)
  ;
  
alias cpp-library
  :
    cpp-boost-library
    cpp-compil-library
  ;
    

lib compil-library
  :
    compil/document.cpp
    compil/package.cpp
    
    $(TOP)/language//compil-language
  :
    <implicit-dependency>$(TOP)/language//compil-language
  :
  :
    <include>$(TOP)
  ;
  
alias library
  :
    cpp-library
    compil-library
  ;